mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__columns
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#jsCurrentTime 00:00:00
                    |/
                    span#jsTotalTime 00:00:00
            .videoPlayer__columns
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__columns
                span#jsFullScreen
                    i.fas.fa-expand     